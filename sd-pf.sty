\newcount\@offX
\newcount\@offY

%-- 1 x 1 --%
\def\phone{\@ifnextchar[{\@phone}{\@phone[0,0]}}
\def\@phone[#1,#2]#3{\@@phone[#1,#2][#3]}
\def\@@phone[#1,#2][#3]{%
    \priform[#1,#2]
    {
        \@dancer[0,0]#3 \cr
    }%
}

%-- 1 x 2 --%
\def\phtwo{\@ifnextchar[{\@phtwo}{\@phtwo[0,0]}}
\def\@phtwo[#1,#2]#3{\@@phtwo[#1,#2][#3]}
\def\@@phtwo[#1,#2][#3,#4]{%
    \priform[#1,#2]
    {
        \@dancer[0,0]#3 & \@dancer[0,0]#4 \cr
    }%
}

%-- 2 x 1 --%
\def\pvtwo{\@ifnextchar[{\@pvtwo}{\@pvtwo[0,0]}}
\def\@pvtwo[#1,#2]#3{\@@pvtwo[#1,#2][#3]}
\def\@@pvtwo[#1,#2][#3,#4]{%
    \priform[#1,#2]
    {
        \@dancer[0,0]#3 \cr
        \@dancer[0,0]#4 \cr
    }%
}

%-- 1 x 3 --%
\def\phthree{\@ifnextchar[{\@phthree}{\@phthree[0,0]}}
\def\@phthree[#1,#2]#3{\@@phthree[#1,#2][#3]}
\def\@@phthree[#1,#2][#3,#4,#5]{%
    \priform[#1,#2]
    {
        \@dancer[0,0]#3 & \@dancer[0,0]#4 & \@dancer[0,0]#5 \cr
    }%
}

%-- 3 x 1 --%
\def\pvthree{\@ifnextchar[{\@pvthree}{\@pvthree[0,0]}}
\def\@pvthree[#1,#2]#3{\@@pvthree[#1,#2][#3]}
\def\@@pvthree[#1,#2][#3,#4,#5]{%
    \priform[#1,#2]
    {
        \@dancer[0,0]#3 \cr
        \@dancer[0,0]#4 \cr
        \@dancer[0,0]#5 \cr
    }%
}


%-- triangle --%
\def\pwtriangle{\@ifnextchar[{\@pwtriangle}{\@pwtriangle[0,0]}}
\def\@pwtriangle[#1,#2]#3{\@@pwtriangle[#1,#2][#3]}
\def\@@pwtriangle[#1,#2][#3,#4,#5]{%
    \priform[#1,#2]
    {
                         & \@dancer[0,0]#4 \cr
        \@dancer[0,50]#3 & \@dancer[0,0]#5 \cr
    }%
}

\def\petriangle{\@ifnextchar[{\@petriangle}{\@petriangle[0,0]}}
\def\@petriangle[#1,#2]#3{\@@petriangle[#1,#2][#3]}
\def\@@petriangle[#1,#2][#3,#4,#5]{%
    \priform[#1,#2]
    {
        \@dancer[0,0]#5 &                  \cr
        \@dancer[0,0]#4 & \@dancer[0,50]#3 \cr
    }%
}

\def\pntriangle{\@ifnextchar[{\@pntriangle}{\@pntriangle[0,0]}}
\def\@pntriangle[#1,#2]#3{\@@pntriangle[#1,#2][#3]}
\def\@@pntriangle[#1,#2][#3,#4,#5]{%
    \priform[#1,#2]
    {
        \@dancer[50,0]#3 &                 \cr
        \@dancer[0,0]#5  & \@dancer[0,0]#4 \cr
    }%
}

\def\pstriangle{\@ifnextchar[{\@pstriangle}{\@pstriangle[0,0]}}
\def\@pstriangle[#1,#2]#3{\@@pstriangle[#1,#2][#3]}
\def\@@pstriangle[#1,#2][#3,#4,#5]{%
    \priform[#1,#2]
    {
        \@dancer[0,0]#4  & \@dancer[0,0]#5 \cr
        \@dancer[50,0]#3 &                 \cr
    }%
}

