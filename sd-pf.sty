%       \usepackage{sd-sf12}
%
%----------------------------- MACRO LIST -------------------------------------
%
%<< General syntax >>
%
%   \XXXXX[HOFF,VOFF]{D1,D2,...,Dn}
%
%       XXXX: macro name of primitive formation. it begins with p.
%       HOFF: horizontal offset(%) of the dancers from the matrix point.
%       VOFF: vertical   offset(%) of the dancers from the matrix point.
%           : [HOFF,VOFF] is optional, default is [0,0]
%
%       Dn  : string of 3 characters.
%           : 1st character means dancer frame.
%           :    b is box, g is circle, p is dashed box, "." is no frame.
%           : 2nd character means character in the frame.
%           :   every normal letter is OK, but "." means no character.
%           : 3rd character means direction of dancer.
%           :   .(none) n(north) s(south) e(east) w(west)
%           :   1(north-east) 2(north-west) 3(south-west) 4(south-west)
%           :   v(n and s) h(e and w) r(1 and 3) l(2 and 4)
%           :   +(n and s and e and w) x(1 and 2 and 3 and 4)
%
%       ex. :   \phfour{b1n,g1s,g2n,b2s} is a horizontal right hand wave.
%               \phBB{b1n,g1n,g2s,b2s}   is a right hand box.
%
%<< 1 x 2 >>
%   \phtwo{D1,D2}           :   D1 D2
%
%<< 2 x 1 >>
%   \pvtwo{D1,D2}           :   D1
%                               D2
%
%<< 1 x 3 >>
%   \phthree{D1,D2,D3}      :   D1 D2 D3
%
%<< 3 x 1 >>
%   \pvthree{D1,D2,D3}      :   D1
%                               D2
%                               D3
%
%<< triangle >>
%   \pwtriangle{D1,D2,D3}   :       D2
%                               D1
%                                   D3
%
%   \pntriangle{D1,D2,D3}   :     D1
%                               D3  D2
%
%   \petriangle{D1,D2,D3}   :   D3
%                                   D1
%                               D2
%
%   \pstriangle{D1,D2,D3}   :   D2  D3
%                                 D1
%
%<< 1 x 4 >>
%   \phfour{D1,D2,D3,D4}    :   D1 D2 D3 D4
%
%<< 4 x 1 >>
%   \pvfour{D1,D2,D3,D4}    :   D1
%                               D2
%                               D3
%                               D4
%
%<< 1 x 6 >>
%   \phsix{D1,D2,D3,D4,D5,D6}:   D1 D2 D3 D4 D5 D6
%
%<< 6 x 1 >>
%   \pvsix{D1,D2,D3,D4}     :   D1
%                               D2
%                               D3
%                               D4
%                               D5
%                               D6
%
%<< 1 x 8 >>
%   \pheight{D1,D2,D3,D4,D5,D6,D7,D8}:   D1 D2 D3 D4 D5 D6 D7 D8
%
%<< 8 x 1 >>
%   \pveight{D1,D2,D3,D4,D5,D6,D7,D8}:D1
%                                     D2
%                                     D3
%                                     D4
%                                     D5
%                                     D6
%                                     D7
%                                     D8
%
%<< 2 x 2 >>
%   \phBB{D1,D2,D3,D4}      :   D1 D3
%                               D2 D4
%
%   \phDU{D1,D2}            :      D2
%                               D1
%
%   \phUD{D1,D2}            :   D1
%                                  D2
%
%<< diamond >>
%   \phdiamond{D1,D2,D3,D4} :        D2
%                               D1        D3
%                                    D4
%
%   \pvdiamond{D1,D2,D3,D4} :         D1
%
%                                   D4  D2
%
%                                     D3
%
%<< star >>
%   \pstar{D1,D2,D3,D4} :
%   \pStar{D1,D2,D3,D4} :             D2
%                                   D1  D3
%                                     D4
%
%<< T >>
%   \pstee{D1,D2,D3,D4}     :   D1  D2
%                                 D3
%                                 D4
%
%   \pwtee{D1,D2,D3,D4}     :         D1
%                               D4 D3
%                                     D2
%
%   \pntee{D1,D2,D3,D4}     :     D4
%                                 D3
%                               D2  D1
%
%   \petee{D1,D2,D3,D4}     :   D2
%                                  D3 D4
%                               D1
%
%<< 2 x 3 >>
%   \phBBB{D1,D2,D3,D4,D5,D6}   :   D1 D3 D5
%                                   D2 D4 D6
%
%<< 3 x 2 >>
%   \pvBBB{D1,D2,D3,D4,D5,D6}   :   D2 D1
%                                   D4 D3
%                                   D6 D5
%
%<< 2 x 4 >>
%   \phBBBB{D1,D2,D3,D4,D5,D6,D7,D8}    :   D1 D3 D5 D7
%                                           D2 D4 D6 D8
%
%<< 4 x 2 >>
%   \pvBBBB{D1,D2,D3,D4,D5,D6,D7,D8}    :   D2 D1
%                                           D4 D3
%                                           D6 D5
%                                           D8 D7
%
%<< 4 x 4  restricted, people in northwest spots >>
%   \pBBBBNW{D1,D2,D3,D4,D5,D6,D7,D8}    :  D1    D5
%                                              D3    D7
%                                           D2    D6
%                                              D4    D8
%
%  You should use '...' for other phantoms.
%
%  pBBBBNWplus is the same, but puts '+' sign in the phantom spots.
%  You should use '.+.' for other phantoms.
%
%<< 4 x 4  restricted, people in northeast spots >>
%   \pBBBBNE{D1,D2,D3,D4,D5,D6,D7,D8}    :     D3    D7
%                                           D1    D5
%                                              D4    D8
%                                           D2    D6
%
%  You should use '...' for other phantoms.
%
%  pBBBBNEplus is the same, but puts '+' sign in the phantom spots.
%  You should use '.+.' for other phantoms.
%
%<< twin diamonds >>
%   \pvdiamonds{D1,D2,D3,D4,D5,D6,D7,D8}   :         D2
%                                              D1          D3
%                                                    D4
%
%                                                    D8
%                                              D7          D5
%                                                    D6
%
%
%   \phdiamonds{D1,D2,D3,D4,D5,D6,D7,D8}   :     D7      D1
%
%                                              D6  D8  D4  D2
%
%                                                D5      D3
%
%<< hourglass >>
%   \phhourglass{D1,D2,D3,D4,D5,D6,D7,D8}   :         D2
%                                               D1          D3
%                                                   D8  D4
%                                               D7          D5
%                                                     D6
%
%   \pvhourglass{D1,D2,D3,D4,D5,D6,D7,D8}   :     D7    D1
%                                                    D8
%                                               D6        D2
%                                                    D4
%                                                 D5    D3
%
%<< 1/4 tag >>
%   \phqtag{D1,D2,D3,D4,D5,D6,D7,D8}   :          D1 D2
%                                              D3 D4 D5 D6
%                                                 D7 D8
%
%   \pvqtag{D1,D2,D3,D4,D5,D6,D7,D8}   :          D3
%                                              D7 D4 D1
%                                              D8 D5 D2
%                                                 D6
%
%<< rigger >>
%   \phrigger{D1,D2,D3,D4,D5,D6,D7,D8}   :           D1 D2
%                                              D3 D4       D5 D6
%                                                    D7 D8
%
%   \pvrigger{D1,D2,D3,D4,D5,D6,D7,D8}   :        D3
%                                                 D4
%                                               D7  D1
%                                               D8  D2
%                                                 D5
%                                                 D6
%
%<< stars >>
%   \phstar{D1,D2,D3,D4,D5,D6,D7,D8}    :     D7     D1
%                                           D6  D8 D4  D2
%                                             D5     D3
%
%   \pvstar{D1,D2,D3,D4,D5,D6,D7,D8}    :     D2
%                                           D1  D3
%                                             D4
%                                             D8
%                                           D7  D5
%                                             D6
%
%<< galaxy >>
%   \phgalaxy{D1,D2,D3,D4,D5,D6,D7,D8}      :        D2
%                                                  D1  D3
%                                               D8        D4
%                                                  D7  D5
%                                                    D6
%
%<< circle >>
%   \phcircle{D1,D2,D3,D4,D5,D6,D7,D8}      :           D2
%                                                 D1          D3
%
%                                               D8              D4
%
%                                                 D7          D5
%                                                       D6
%
%   \pscircle{D1,D2,D3,D4,D5,D6,D7,D8}      :        D2   D3
%
%                                               D1             D4
%
%                                               D8             D5
%
%                                                    D7    D6
%
%<< thar >>
%   \phvthar{D1,D2,D3,D4,D5,D6,D7,D8}
%   \phvThar{D1,D2,D3,D4,D5,D6,D7,D8}
%   \pHvthar{D1,D2,D3,D4,D5,D6,D7,D8}
%   \phVthar{D1,D2,D3,D4,D5,D6,D7,D8}
%   \pHVthar{D1,D2,D3,D4,D5,D6,D7,D8}       :        D4
%                                                    D3
%                                               D1 D2  D6 D5
%                                                    D7
%                                                    D8
%
%   \plrthar{D1,D2,D3,D4,D5,D6,D7,D8}
%   \plrThar{D1,D2,D3,D4,D5,D6,D7,D8}
%   \pLRthar{D1,D2,D3,D4,D5,D6,D7,D8}       :     D1     D4
%                                                   D2 D3
%                                                   D7 D6
%                                                 D8     D5
%



%<< crosswave >>
%   \phcrosswave{D1,D2,D3,D4,D5,D6,D7,D8}   :        D5
%                                                    D6
%                                             D4   D3   D7   D8
%                                                    D2
%                                                    D1
%
%
%   \pvcrosswave{D1,D2,D3,D4,D5,D6,D7,D8}   :        D4
%
%                                                    D3
%                                               D1 D2 D6 D5
%                                                    D7
%
%                                                    D8
%
%<< spindle >>
%   \phspindle{D1,D2,D3,D4,D5,D6,D7,D8} :          D2 D3 D4
%                                               D1          D5
%                                                  D8 D7 D6
%
%   \pvspindle{D1,D2,D3,D4,D5,D6,D7,D8} :             D1
%                                                  D8    D2
%                                                  D7    D3
%                                                  D6    D4
%                                                     D5
%
%<< 3 x 1 diamond >>
%   \phthreebyonedmd{D1,D2,D3,D4,D5,D6,D7,D8} :        D4
%
%                                               D1 D2 D3 D7 D6 D5
%
%                                                      D8
%
%   \pvthreebyonedmd{D1,D2,D3,D4,D5,D6,D7,D8} :       D1
%                                                     D2
%                                                     D3
%                                                D8        D4
%                                                     D7
%                                                     D6
%                                                     D5
%
%<< 3 x 1 triangles (external, use qtag for internal) >>
%   \phthreebyonetgl{D1,D2,D3,D4,D5,D6,D7,D8} : D1       D2
%                                               D3 D4 D8 D7
%                                               D6       D5
%
%   \pvthreebyonetgl{D1,D2,D3,D4,D5,D6,D7,D8} : D6 D3 D1
%                                                  D4
%                                                  D8
%                                               D5 D7 D2
%
% << point to point diamonds >>
%   \phptpd{D1,D2,D3,D4,D5,D6,D7,D8} :
%          D2           D6
%      D1      D3   D5      D7 
%          D4           D8 
%   \pvptpd{D1,D2,D3,D4,D5,D6,D7,D8} :
%          D1
%        D4  D2
%          D3
%          D5
%        D8  D6
%          D7
%
% << "bone" or "I" setups >>
%   \phbone{D1,D2,D3,D4,D5,D6,D7,D8}   :    D1             D7
%                                              D3 D4 D5 D6
%                                           D2             D8
%
%   \pvbone{D1,D2,D3,D4,D5,D6,D7,D8}   :       D2  D1
%                                                D3
%                                                D4
%                                                D5
%                                                D6
%                                              D8  D7
