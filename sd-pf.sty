%-- 1 x 8 --%
\def\pheight{\@ifnextchar[{\@pheight}{\@pheight[0,0]}}
\def\@pheight[#1,#2]#3{\@offX=#1\@offY=#2\@@pheight[#3]}
\def\@@pheight[#1,#2,#3,#4,#5,#6,#7,#8]{%
